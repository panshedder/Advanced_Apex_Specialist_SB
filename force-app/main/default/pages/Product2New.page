<apex:page standardController="Product2" extensions="Product2Extension" >
    <apex:sectionHeader title="New Product" subtitle="Add Inventory" />
    <apex:pageMessages id="pageMessages" />
    <apex:form id="form" >
        <apex:actionRegion >
            <apex:pageBlock title="Existing Inventory" >
                Chart goes here
            </apex:pageBlock>
            <apex:pageBlock title="New Products" >
                <apex:pageBlockButtons location="top">
                    <apex:commandButton action="{!save}" value="Save" />
                </apex:pageBlockButtons>
                <apex:pageBlockButtons location="bottom">
                    <apex:commandButton action="{!addRows}" value="Add" />
                </apex:pageBlockButtons>
                

                <apex:pageBlockTable value="{!productsToInsert}" var="p" id="orderItemTable">
                    <apex:column>
                        <apex:facet name="header">{!$ObjectType.Product2.fields.Name.Label}</apex:facet>
                        <apex:inputText value="{!p.productRecord.Name}" />
                    </apex:column>
                    <apex:column>
                        <apex:facet name="header">{!$ObjectType.Product2.fields.Family.Label}</apex:facet>
                        <apex:selectList value="{!p.productRecord.Family}" size="1" multiselect="false">
                            <apex:selectOptions value="{!familyOptions}" />
                        </apex:selectList>
                    </apex:column>
                    <apex:column>
                        <apex:facet name="header">{!$ObjectType.Product2.fields.isActive.Label}</apex:facet>
                        <apex:inputText value="{!p.productRecord.isActive}"/>
                    </apex:column>
                    <apex:column headerValue="UnitPrice">
                        <apex:facet name="header">UnitPrice</apex:facet>
                        <apex:inputField value="{!p.pricebookEntryRecord.UnitPrice}"/>
                    </apex:column>
                    <apex:column>
                        <apex:facet name="header">{!$ObjectType.Product2.fields.Initial_Inventory__c.Label}</apex:facet>
                        <apex:inputText value="{!p.productRecord.Initial_Inventory__c}"/>
                    </apex:column>
                </apex:pageBlockTable>
            </apex:pageBlock>
        </apex:actionRegion>
    </apex:form>
</apex:page>